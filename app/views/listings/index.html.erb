<div class="jumbotron">
  <div class="container">
    <h2>RAILS ON RUBY TUTORIALS</h2>
    <h3>BY : ROSS PURDON</h3>
    <h4>Testing my shit out</h4>
  </div>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url("medium")), listing %>
          
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price, unit: "R") %></p>
            <p><%if listing.user %><%= "Uploaded By : #{listing.user.name}" %><% end %></p>
          </div>
        </div>      
      </div>
    <% end %>  
  </div>
</div>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
